{
  "name": "jm-dev-tools",
  "version": "1.0.0",
  "description": "JM dev tools",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "lint:toml": "taplo check",
    "format:toml": "taplo format",
    "lint:js": "eslint --cache . --ext .js,.jsx,.ts,.tsx",
    "format:js": "pnpm eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:prettier": "prettier --check .",
    "format:prettier": "prettier --write .",
    "lint:spell": "cspell --no-progress",
    "lint:markdown": "markdownlint --dot --config .markdownlint.json '**/*.{md,markdown,mdx,adoc,asciidoc}'",
    "lint:links": "find . \\( -name '*.md' -o -name '*.markdown' -o -name '*.mdx' -o -name '*.adoc' -o -name '*.asciidoc' \\) -not -path './node_modules/*' -not -path './.venv/*' -print0 | xargs -0 -n1 markdown-link-check -q -p --config .markdown-link-check.json",
    "lint:vale": "vale README.md SECURITY.md docs",
    "lint:docs": "pnpm run lint:prettier && pnpm run lint:markdown && pnpm run lint:links && pnpm run lint:spell && pnpm run lint:vale",
    "lint": "pnpm run lint:js && pnpm run lint:toml && pnpm run lint:prettier && pnpm run lint:markdown && pnpm run lint:links && pnpm run lint:spell && pnpm run lint:vale",
    "format": "pnpm run format:js && pnpm run format:toml && pnpm run format:prettier",
    "cspell:project-words": "echo '# New Words' >> project-words.txt && cspell --words-only --unique | sort --ignore-case >> project-words.txt",
    "cspell:suggests": "cspell --no-progress --show-suggestions --show-context"
  },
  "keywords": [
    "develop",
    "dev tools",
    "spellcheck"
  ],
  "author": "Jürgen Mülbert",
  "license": "ISC",
  "devDependencies": {
    "@cspell/dict-de-de": "^4.1.2",
    "@cspell/dict-es-es": "^3.0.8",
    "@cspell/dict-it-it": "^3.1.6",
    "@eslint/js": "^9.0.0",
    "cspell": "^9.2.2",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^61.5.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "markdown-link-check": "^3.14.1",
    "markdownlint": "^0.39.0",
    "markdownlint-cli": "^0.45.0",
    "prettier": "^3.6.2"
  },
  "eslintIgnore": [
    "dist",
    "node_modules",
    ".venv"
  ]
}
